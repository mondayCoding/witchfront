{
   "compilerOptions": {
      "baseUrl": ".",
      "outDir": "build/dist",
      "module": "commonjs",
      //"module": "esnext",
      "target": "es5",
      "lib": ["es6", "dom"],
      "sourceMap": true,
      "allowJs": true,
      "jsx": "react",
      "moduleResolution": "node",
      "rootDir": "src",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": false,
      "noImplicitThis": false,
      "noImplicitAny": true,
      "strictNullChecks": false,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": false,
      "listEmittedFiles": true,
      "listFiles": true
   },
   "exclude": [
      "node_modules",
      "build",
      "scripts",
      "acceptance-tests",
      "webpack",
      "jest",
      "src/setupTests.ts"
   ]
}
